{
  "name": "cr-engine",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "astro:build": "astro build",
    "build": "npm run pub-code:clean && npm run pub-code:link && npm run astro:build && npx pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "rmdir": "node -e \"var fs = require('fs');process.argv.slice(1).map((fpath)=>{ try { fs.rmdirSync(fpath,{recursive: true})} catch(e){console.warn('[ WARNING ] : Folder not found -', fpath)} });process.exit(0);\"",
    "build:clean": "npm run rmdir --silent -- dist",
    "build:preview": "npm run build && npm run preview",
    "pub-code:link": "sh scripts/cr-repo-connect/build.sh",
    "pub-code:clean": "npm run rmdir --silent -- src/content/posts",
    "pub-code:head": "git --git-dir=src/content/posts/.git --work-tree=src/content/posts reset --hard origin/publish",
    "pub-code:refresh": "git --git-dir=src/content/posts/.git --work-tree=src/content/posts pull",
    "prettier:write": "prettier 'src/**/*.{js,ts,mjs,cjs,json,astro}' --write --plugin-search-dir=. --config .prettierrc.js",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview:cf": "wrangler pages dev ./dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,astro}": [
      "prettier --write --plugin-search-dir=. --config .prettierrc.js",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.6",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@astropub/md": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "astro": "5.15.6",
    "dayjs": "^1.11.5",
    "postcss": "^8.5.3"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "1.10.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.8.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-no-loops": "^0.4.0",
    "globals": "^16.3.0",
    "hastscript": "^9.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.1.0",
    "pagefind": "^1.4.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.7.0",
    "unist-util-visit": "^5.0.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.25.1"
  }
}
