#!/bin/sh

if [[ ! -d "src/content/posts" ]]; then
  npm run pub-code:link

else

    if [ $(find "src/content/posts" -maxdepth 1 -type d ! -name "posts" ! -name ".git" | wc -l) -eq 0 ]; then
        echo "No posts found in 'src/content/posts' >> Refreshing..."
        npm run pub-code:head
    fi

fi
