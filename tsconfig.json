{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@component/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@request/*": ["restapi/*"],
      "@pages/*": ["pages/*"]
    },
    "types": ["astro/client"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
