{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@component/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@restapi/*": [
        "src/restapi/*"
      ]
    },
    "types": [
      "@astrojs/image/client"
    ],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
  }
}