{
  "extends": "astro/tsconfigs/base",
  "strict": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@component/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@request/*": [
        "restapi/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
      
    },
    "types": [
      "astro/client"
    ],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
  }
}