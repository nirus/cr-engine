---
import BaseHead from "@Component/Head/BaseHead.astro";
import Nav from "@Component/Navigation/TopBar.astro";
import Footer from "@Component/Footer/Footer.astro";

let title = "How To Code";
let description = "";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12">
      <article class="max-w-6xl mx-auto px-3">
        <header class="mx-auto max-w-3xl text-center content">
          <h1 class="mb-4">404 page [ :( ]</h1>
          <p class="text-xl">Lets fart in space for sometime.</p>
          <div class="embed-responsive aspect-ratio-4/3">
            <iframe
              width="700"
              height="500"
              class="embed-responsive-item"
              src="https://www.youtube.com/embed/cWuzJBboQyE?autoplay=1&mute=1&showinfo=0&controls=0"
              frameborder="0"
              allow="accelerometer; autoplay; encrypted-media; gyroscope;"
              allowfullscreen></iframe>
          </div>
        </header>
      </article>
    </main>
    <Footer />
  </body>
</html>
