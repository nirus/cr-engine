---
import GoogleAnalytics from './GoogleAnalytics.astro'
import '../../styles/main.css'
import { Settings } from '@config/site'

export interface Props {
  title: string
  description: string
  image?: string | null
  canonicalUrl?: string
  articleMeta?: { pubDate: string; author: string; tags: string[] }
  jsonLd?: object | object[]
  paginationPrev?: string
  paginationNext?: string
}

const { mainUrl } = Settings.site
const {
  title,
  description,
  image,
  canonicalUrl,
  articleMeta,
  jsonLd,
  paginationPrev,
  paginationNext,
} = Astro.props

const ogImage = mainUrl + (image || '/images/social.png')
const pageUrl = canonicalUrl || new URL(Astro.url.pathname, mainUrl).href
const ogType = articleMeta ? 'article' : 'website'

//Google Analytics Tag ID
const gaTagId = import.meta.env.GA_TAG_ID || Settings.site.gaTagId

const jsonLdArray = jsonLd ? (Array.isArray(jsonLd) ? jsonLd : [jsonLd]) : []
---

<!-- Dark mode FOUC prevention -->
<script is:inline>
  ;(function () {
    if (localStorage.getItem('theme-preference') === 'dark') {
      document.documentElement.classList.add('dark')
    }
  })()
</script>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="sitemap" href="/sitemap.xml" />
<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
<link rel="canonical" href={pageUrl} />
<link
  rel="alternate"
  type="application/rss+xml"
  title={Settings.site.title}
  href={`${mainUrl}/rss.xml`}
/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,400;0,600;0,800;1,100;1,200;1,400;1,600;1,800&display=swap"
  media="print"
  onload="this.media='all'"
/>
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Cutive+Mono&display=swap"
  media="print"
  onload="this.media='all'"
/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={pageUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

{
  articleMeta && (
    <>
      <meta property="article:published_time" content={articleMeta.pubDate} />
      <meta property="article:author" content={articleMeta.author} />
      {articleMeta.tags.map(tag => (
        <meta property="article:tag" content={tag} />
      ))}
    </>
  )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={pageUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />
<meta name="twitter:creator" content="@Coder_Rocks" />

<!-- Pagination -->
{paginationPrev && <link rel="prev" href={paginationPrev} />}
{paginationNext && <link rel="next" href={paginationNext} />}

<!-- JSON-LD Structured Data -->
{
  jsonLdArray.map(ld => (
    <script type="application/ld+json" set:html={JSON.stringify(ld)} />
  ))
}

<!-- Google Analytics -->
<GoogleAnalytics gaTagId={gaTagId} />
