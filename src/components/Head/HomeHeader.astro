---
import CoderRocks from "@component/Shared/CoderRocks/index.astro";

export interface Props {
  title: string;
  tagline: string;
  showLogo?: boolean;
}
const { title, tagline, showLogo = true } = Astro.props;
---

<header
  class="mx-auto max-w-xl text-center content flex flex-col align-middle content-center items-center"
>
  {
    showLogo ? (
      <CoderRocks title={title} tagline={tagline} />
    ) : (
      <>
        <h1 class="text-4xl my-2 leading-2" data-test="header-title">
          {title}
        </h1>
        <p data-test="header-description" class="text-2xl font-light">
          {tagline}
        </p>
      </>
    )
  }
</header>
