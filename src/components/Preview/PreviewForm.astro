---
import { Settings } from '@config/site'

const urlParam = Astro.url.searchParams.get('url')
---

<div class="mx-auto max-w-5xl px-4 py-8">
  <h1 class="mb-4 text-3xl font-bold">GitHub Post Preview</h1>

  <form method="GET" class="mb-6">
    <div class="mb-4 flex gap-4">
      <input
        type="url"
        name="url"
        value={urlParam}
        placeholder={`${Settings.preview.allowedRepo}/tree/publish/apollo-graphql-client-abort-pending-requests`}
        class="flex-1 rounded-lg border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        required
      />
      <button
        type="submit"
        class="rounded-lg bg-stone-900 px-6 py-2 text-white hover:bg-stone-600"
      >
        Preview
      </button>
    </div>
  </form>
</div>
