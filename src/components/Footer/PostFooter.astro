---
import { Settings } from '@config/site'

export interface Props {
  avatar_url?: string
  name?: string
  company?: string
  bio?: string
  html_url?: string
  login?: string
}

const {
  avatar_url = '',
  name = '',
  bio = '',
  html_url = '',
  login = '',
} = Astro.props
---

<footer
  class={`text-center ${Settings.post.contentWidth} mx-auto flex flex-col`}
>
  <div class="border-b-2 border-zinc-400 pt-4"></div>

  <div class="m-auto flex items-center">
    <img
      alt={`Author Avatar ${name}`}
      src={avatar_url}
      loading="lazy"
      width={Settings.post.avatarSize}
      class="m-5"
    />
    <div class="m-5 text-left">
      <div class="text-sm font-light">Article by</div>
      <div class="text-lg font-semibold">{name}</div>
      <div class="text-lg font-light"><span>{bio}</span></div>
      <a
        href={html_url}
        target="_blank"
        rel="noreferrer"
        class="text-lg font-medium"
      >
        @{login}
      </a>
    </div>
  </div>
</footer>
